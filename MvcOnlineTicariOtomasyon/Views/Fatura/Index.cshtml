@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped" style="margin-top:20px;">
    <tr>
      

        <th>Seri Sıra No</th>
        
    
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
       
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Popup Liste</th>
        <th>Yeni Kalem</th>

    </tr>
    @foreach (var k in Model)
    {
<tr>

    <td>
        @k.FaturaSeriNo  @k.FaturaSıraNo
    </td>

  
    <td>@k.Tarih</td>
    <td>@k.Saat</td>
    <td>@k.Toplam ₺</td>
   


    <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:darksalmon;color:white">Detaylar</a></td>
    <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-default" style="background-color:plum;color:white">Popup</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:thistle;color:white">Kalem</a></td>

</tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura</a>
